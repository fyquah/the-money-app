<% provide :title , "Update Profile" %>
<div class='row'>
	<div class='col-xs-12 col-sm-offset-2 col-sm-8'>
		<h1>Update your profile</h1>
		<%= form_for(@user , html: {role: "form" , :method => "patch"}) do |f| %>
			<%= render "shared/error_messages" , object: f.object %>
			<div class='form-group <%= "has-error" if @user.errors.messages[:name] %>'>
				<%= f.label :name %>
				<%= f.text_field :name , :class => "form-control" %>
			</div>
			<div class='form-group <%= "has-error" if @user.errors.messages[:email] %>'>
				<%= f.label :email %>
				<%= f.text_field :email , :class => "form-control" %>
			</div>
			<div class='form-group <%= "has-error" if @user.errors.messages[:password] %>'>
				<%= f.label :password %>
				<%= f.password_field :password , :class => "form-control" %>
			</div>
			<div class='form-group <%= "has-error" if @user.errors.messages[:password_confirmation] %>'>
				<%= f.label :password_confirmation ,'Password Confirmation' %>
				<%= f.password_field :password_confirmation , :class => "form-control" %>
			</div>
			<div class='form-group'>
				<%= f.submit "Update profile" , :class =>"btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>