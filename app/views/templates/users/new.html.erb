<div class='row'>
	<div class='col-xs-12 col-sm-offset-2 col-sm-8'>
		<h1>Sign up for an account now!</h1>
		<form ng-submit="submit()">
			<div class='form-group'>
				<%= label_tag :name , "Name" %>
				<%= text_field_tag :name , nil , :class => "form-control" , :required => true , "ng-model" => "user.name" %>
			</div>
			<div class='form-group'>
				<%= label_tag :email , "Email" %>
				<%= text_field_tag :email , nil , :class => "form-control" , :required => true , "ng-model" => "user.email"%>
			</div>
			<div class='form-group'>
				<%= label_tag :password , "Password" %>
				<%= password_field_tag :password , nil , :type => "email" , :class => "form-control" , :required => true , "ng-model" => "user.password" %>
			</div>
			<div class='form-group'>
				<%= label_tag :password_confirmation ,'Password Confirmation' %>
				<%= password_field_tag :password_confirmation , nil , :class => "form-control" , :required => true , "ng-model" => "user.password_confirmation" %>
			</div>
			<div class='form-group'>
		        <button class="btn btn-default" ng-click="submit()">Sign In</button>
			</div>
		</form>
	</div>
</div>