<div class='row'>
  <div class='col-xs-12 col-sm-8 col-sm-offset-2'>
    <h1>Sign in!</h1>
    <form>
      <div class='form-group'>
        <%= label_tag :email , "Email" %>
        <%= text_field_tag :email , nil , :class => "form-control" , "ng-model" => "user.email" %>
      </div>
      <div class="form-group">
        <%= label_tag :password , "Password" %>
        <%= password_field_tag :password , nil , :class => "form-control" , "ng-model" => "user.password" %>
      </div>
      <div class='form-group'>
        <button class="btn btn-default" ng-click="submit()">Sign In</button>
        <a href="#/register" class="btn btn-success">Register</a>
      </div>
    </form> 
  </div>
</div>  