<h1>Account Books</h1>
<a style="margin-bottom : 20px" ng-href="/account-books/new" class="btn btn-link">Create New Accout Book</a>

<div ng-repeat="account_book in account_books" class="row">
    <a ng-href="/account-books/{{ account_book.id }}">
        <div class="row account-books-{{ $index % 2 == 0 ? 'blue' : 'green' }}-row">
            <div class="col-md-6 col-xs-4">{{ account_book.name }}</div>
            <div class="col-md-3 col-xs-4">Created on {{ account_book.created_at | date:'dd-MMM-yyyy' }}</div>
            <div class="col-md-3 col-xs-4">Updated on {{ account_book.updated_at | date:'dd-MMM-yyyy' }}</div>
        </div>
    </a>
</div>