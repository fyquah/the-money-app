<div class="page-header">
    <div class="row">
        <div class="col-sm-8"><h2>{{ account_book.name }}</h2></div>
        <div class="col-sm-4"><p style="margin-top: 20px; text-align :right"><a ng-click="edit.rename_account_book = true">Change your account book name</a></p></div>
    </div>
</div>
<a ng-click="new_accounting_transaction = {}; edit.add_new_transaction = true;" class="btn btn-link">Create new transaction</a>
<h2>Transactions</h2>
<div ng-show="account_book.accounting_transactions.length === 0">
    Looks like you are still have to create any accounting transactions <strong>:(</strong>, go on and create one!
</div>
<div ng-repeat="transaction in account_book.accounting_transactions">
    <div class="row">
        <div class="col-xs-3 col-sm-2">{{ transaction.date }}</div>
        <div class="col-xs-9 col-sm-4">{{ transaction.description }}</div>
        <div class="col-xs-6 col-sm-2"><strong>{{ transaction.amount }}</strong></div>
        <div class="col-xs-3 col-sm-2"><a ng-href="/accounting-transactions/{{ transaction.id }}" class="btn btn-info" >View</a></div>
        <div class="col-xs-3 col-sm-2"><a style="cursor: pointer" ng-click="removeTransaction($index)" class="btn btn-danger">Delete</a></div>
    </div>
    <br />
</div>

<app-pop-up-window ng-show="edit.rename_account_book">
    <p style="text-align : right"><a style="cursor: pointer" ng-click="edit.rename_account_book = false">X</a></p>
    <h2>Rename Account Book</h2>
    <form role="form" ng-submit="renameAccountBook()">
        <div class="form-group">
            <label>New Account Name</label>
            <input class="form-control" ng-model="account_book.name" placeholder="Enter new account name" />
        </div>
        <div class="form-group">
            <input type="submit" value="Rename Account Book" class="btn btn-info form-control" />
        </div>
    </form>
</app-pop-up-window>

<app-pop-up-window ng-show="edit.add_new_transaction">
    <p style="text-align : right"><a style="cursor: pointer" ng-click="edit.add_new_transaction = false">X</a></p>
    <h2>Add new transaction</h2>
    <form role="form" ng-submit="addNewTransaction()">
        <div class="form-group">
            <label>Transaction Description</label>
            <input class="form-control" ng-model="new_accounting_transaction.description" placeholder="Enter transaction description" />
        </div>
        <div class="form-group">
            <label>Date of Transaction</label>
            <input class="form-control" ng-model="new_accounting_transaction.date" placeholder="Enter transaction date" />
        </div>
        <div class="form-group">
            <input class="form-control" type="submit" value="Add transaction" class="btn btn-info" />
        </div>
        
    </form>
</app-pop-up-window>