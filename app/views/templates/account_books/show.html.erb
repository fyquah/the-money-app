<h1 ng-bind="account_book.name"></h1>
<p>{{ account_book.description }}</p>
<h2>Transactions</h2>
<div class="row" ng-repeat="transaction in account_book.accounting_transactions">
    <div class="col-xs-6">{{ transaction.description }}</div>
    <div class="col-xs-2">{{ transaction.amount }}</div>
    <div class="col-xs-2"><a ng-href="" class="default" >View</a></div>
    <div class="col-xs-2"><a style="cursor: pointer" ng-click="removeTransaction($index)" class="danger">Delete</a></div>
</div>